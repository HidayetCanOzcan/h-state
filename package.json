{
  "name": "h-state",
  "version": "2.0.2",
  "description": "A lightweight and intuitive state management library for React, using Proxy for seamless reactivity with zero dependencies",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "example": "cd examples/basic-react && npm start",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "deploy:example": "cd examples/basic-react && npm run deploy",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "release:beta": "node scripts/release-beta.js",
    "publish:beta": "npm run test && npm run build && npm publish --tag beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HidayetCanOzcan/h-state.git"
  },
  "keywords": [
    "react",
    "state-management",
    "typescript",
    "proxy",
    "reactive"
  ],
  "author": "Hidayet Can Ã–zcan <hidayetcan@gmail.com> (https://github.com/HidayetCanOzcan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HidayetCanOzcan/h-state/issues"
  },
  "homepage": "https://github.com/HidayetCanOzcan/h-state#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "typescript": ">=4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-jest": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-react": "latest",
    "jest": "latest",
    "jest-environment-jsdom": "latest",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "rollup": "latest",
    "rollup-plugin-typescript2": "latest",
    "ts-jest": "latest",
    "typescript": "latest"
  }
}