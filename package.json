{
  "name": "h-state",
  "version": "1.0.0-beta.5",
  "description": "A lightweight and intuitive state management library for React, using Proxy for seamless reactivity with zero dependencies",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "dist/createStore.d.ts",
    "dist/ReactiveStore.d.ts",
    "dist/types.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "example": "cd examples/basic-react && npm start",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "deploy:example": "cd examples/basic-react && npm run deploy",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "release:beta": "node scripts/release-beta.js",
    "publish:beta": "npm run test && npm run build && npm publish --tag beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HidayetCanOzcan/h-state.git"
  },
  "keywords": [
    "react",
    "state-management",
    "typescript",
    "proxy",
    "reactive"
  ],
  "author": "Hidayet Can Ã–zcan <hidayetcan@gmail.com> (https://github.com/HidayetCanOzcan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HidayetCanOzcan/h-state/issues"
  },
  "homepage": "https://github.com/HidayetCanOzcan/h-state#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "typescript": ">=4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^3.20.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}